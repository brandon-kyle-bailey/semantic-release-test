{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES6",
    "lib": ["ES6", "es2015", "DOM"],
    "moduleResolution": "node",
    "module": "CommonJS",
    "typeRoots": ["./node_modules/@types"],
    "outDir": "dist"
  },
  "include": ["./"],
  "exclude": ["./dist", "**/node_modules/*", "**/*.test.ts"]
}
